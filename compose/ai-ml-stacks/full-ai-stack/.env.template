# Full AI/ML Stack Environment Configuration
# Copy this file to .env and customize for your environment
# cp .env.template .env

# ============================================================================
# GENERAL CONFIGURATION
# ============================================================================

# Company/Organization Name (for templates and examples)
COMPANY_NAME=YourCompany

# ============================================================================
# AUTHENTICATION & AUTHORIZATION
# ============================================================================

# Keycloak (Identity and Access Management)
KEYCLOAK_PORT=8081
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=changeme

# ============================================================================
# DATABASES
# ============================================================================

# SQL Server
SQL_SERVER_PORT=1433
MSSQL_SA_PASSWORD=YourStrong@Passw0rd

# ParadeDB (PostgreSQL with extensions)
PARADEDB_PORT=5432
POSTGRESQL_USERNAME=admin
POSTGRESQL_PASSWORD=YourStrong@Password
POSTGRESQL_DATABASE=libs_db
POSTGRESQL_POSTGRES_PASSWORD=YourStrong@Password

# PgAdmin (PostgreSQL Management UI)
PGADMIN_PORT=8082
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=YourStrong@Password

# MongoDB
MONGODB_PORT=27017

# ============================================================================
# AI/ML SERVICES
# ============================================================================

# Ollama (Large Language Model Inference)
OLLAMA_PORT=11434

# Qdrant (Vector Database)
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# SBERT (Sentence Embeddings Service)
SBERT_PORT=8080

# ============================================================================
# SEARCH & INDEXING
# ============================================================================

# OpenSearch (Full-Text Search)
OPENSEARCH_PORT=9200
OPENSEARCH_PERF_PORT=9600
OPENSEARCH_ADMIN_PASSWORD=YourStrong@Password

# OpenSearch Dashboards (UI)
OPENSEARCH_DASHBOARDS_PORT=5601

# Open WebUI (LLM Web Interface)
OPEN_WEBUI_PORT=3000

# ============================================================================
# MESSAGING & QUEUING
# ============================================================================

# RabbitMQ (Message Broker)
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Kafka (Streaming Platform)
KAFKA_PORT=9092

# ============================================================================
# CLOUD EMULATORS
# ============================================================================

# Azurite (Azure Storage Emulator)
AZURITE_BLOB_PORT=10000
AZURITE_QUEUE_PORT=10001
AZURITE_TABLE_PORT=10002

# LocalStack (AWS Services Emulator)
LOCALSTACK_PORT=4566
LOCALSTACK_EDGE_PORT=4571

# ============================================================================
# UTILITIES
# ============================================================================

# Apache Tika (Document Processing)
APACHE_TIKA_PORT=9998

# SMTP4Dev (SMTP Test Server)
SMTP4DEV_SMTP_PORT=25
SMTP4DEV_WEB_PORT=5000

# ============================================================================
# DEPLOYMENT OPTIONS
# ============================================================================

# GPU Support (for CUDA version)
# Uncomment to enable GPU for Ollama and SBERT
# GPU_COUNT=1

# ============================================================================
# SECURITY NOTES
# ============================================================================
#
# IMPORTANT: Change all default passwords before deploying to production!
#
# Password Requirements:
# - Minimum 12 characters
# - Include uppercase, lowercase, numbers, and special characters
# - Avoid common words and patterns
#
# For production:
# - Use secrets management (Docker Secrets, Kubernetes Secrets, Vault)
# - Enable TLS/SSL for all services
# - Configure proper network isolation
# - Implement proper access controls
# - Regular security audits
#
